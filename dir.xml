        <RFXMLDataProvider id="recentitem">
          <property name="data"><![CDATA[<recent>
                        [session:recentItems]
                        </recent>]]></property>
        </RFXMLDataProvider>
        <RFXMLDataProvider id="gettimeinfo">
          <property name="hide-activity-indicator">YES</property>
          <property name="auto-load">NO</property>
          <property name="data-location">http://api.geonames.org/timezone</property>
          <property name="method">GET</property>
          <submit_values>
            <property name="lat">[session:LATsave]</property>
            <property name="lng">[session:LNGsave]</property>
            <property name="username">inoads</property>
          </submit_values>
          <actions>
            <set on="success" if="'[data:getmetar('//geonames/observation/ICAO')]'!=''">
              <property name="save-locally">YES</property>
              <values>
                <property name="timeinfoRSave">GMT Offset: [eval:("var timezone = [data:gettimeinfo("//geonames/timezone/gmtOffset")]; timezoneadj = timezone.toFixed(0); timezoneadj")] from [data:gettimeinfo("//geonames/timezone/timezoneId")]                        Sunrise: [data:gettimeinfo("//geonames/timezone/sunrise")]   Sunset: [data:gettimeinfo("//geonames/timezone/sunset")]</property>
              </values>
            </set>
          </actions>
        </RFXMLDataProvider>
