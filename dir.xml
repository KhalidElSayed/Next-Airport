        <RFXMLDataProvider id="getmetar">
          <property name="hide-activity-indicator">YES</property>
          <property name="auto-load">NO</property>
          <property name="data-location">http://api.geonames.org/weatherIcaoXML</property>
          <property name="method">GET</property>
          <submit_values>
            <property name="ICAO">[data:directory("//current_observation/station_id")]</property>
            <property name="username">inoads</property>
          </submit_values>
          <actions>
            <refresh on="load-finished">
              <property name="id">recentitem</property>
              <property name="widget-id">searchrepeater</property>
              <property name="widget-id">searchrepeatertext</property>
            </refresh>
            <set on="success" if="'[data:getmetar('//geonames/observation/ICAO')]'!=''">
              <property name="save-locally">YES</property>
              <values>
                <property name="METARSave">[data:getmetar("//geonames/observation/observation")]</property>
                <property name="ICAOSave">[data:getmetar("//geonames/observation/ICAO")]</property>
                <property name="LATsave">[data:getmetar("//geonames/observation/lat")]</property>
                <property name="LNGsave">[data:getmetar("//geonames/observation/lng")]</property>
                <property name="recentItems"><![CDATA[<item><]]>![CDATA[[data:getmetar("//geonames/observation/ICAO")]]]<![CDATA[></item>[eval:("'[session:recentItems]'.replace('<item><]]>![CDATA[[data:getmetar("//geonames/observation/ICAO")]]]<![CDATA[></item>', '');")]]]></property>
              </values>
            </set>
            <load_datasource on="success">
              <property name="datasource-id">gettimeinfo</property>
            </load_datasource>
            <load_datasource on="success">
              <property name="datasource-id">gettaf</property>
            </load_datasource>
            <modify on="success">
              <property name="widget-id">location</property>
              <values>
                <property name="text">[data:getmetar("//geonames/observation/stationName")], [data:getmetar("//geonames/observation/countryCode")]</property>
              </values>
            </modify>
            <modify on="success">
              <property name="widget-id">name</property>
              <values>
                <property name="text">[data:getmetar("//geonames/observation/ICAO")] @ [eval:("var elvadj = 0; var elv = [data:getmetar("//geonames/observation/elevation")] * 3.28; elvadj = elv.toFixed(0); elvadj")]ft</property>
              </values>
            </modify>
            <modify on="success">
              <property name="widget-id">time</property>
              <values>
                <property name="text">Updated on [data:getmetar("//geonames/observation/observationTime")]</property>
              </values>
            </modify>
            <modify on="success">
              <property name="widget-id">temp</property>
              <values>
                <property name="text">[data:getmetar("//geonames/observation/temperature")]°C / [eval:("var tempf = 0; var tempc = [data:getmetar("//geonames/observation/temperature")] * 1.8 + 32; tempf = tempc.toFixed(0); tempf")]°F</property>
              </values>
            </modify>
            <modify on="success">
              <property name="widget-id">dewpoint</property>
              <values>
                <property name="text">[data:getmetar("//geonames/observation/dewPoint")]°C / [eval:("var dewf = 0; var dewc = [data:getmetar("//geonames/observation/dewPoint")] * 1.8 + 32; dewf = dewc.toFixed(0); dewf")]°F</property>
              </values>
            </modify>
            <modify on="success">
              <property name="widget-id">clouds</property>
              <values>
                <property name="text">[data:getmetar("//geonames/observation/clouds")]</property>
              </values>
            </modify>
            <modify on="success">
              <property name="widget-id">windspeed</property>
              <values>
                <property name="text">[data:getmetar("//geonames/observation/windSpeed")] knots</property>
              </values>
            </modify>
            <modify on="success">
              <property name="widget-id">winddir</property>
              <values>
                <property name="text">[data:getmetar("//geonames/observation/windDirection")]°</property>
              </values>
            </modify>
          </actions>
        </RFXMLDataProvider>
        <RFXMLDataProvider id="directory">
          <property name="hide-activity-indicator">YES</property>
          <property name="auto-load">NO</property>
          <property name="auth-method">HTTP</property>
          <property name="data-location">http://api.wunderground.com/auto/wui/geo/WXCurrentObXML/index.xml</property>
          <property name="method">GET</property>
          <submit_values>
