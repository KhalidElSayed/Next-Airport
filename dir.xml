          </submit_values>
          <actions>
            <alert on="failed">
              <property name="title">Search Failed</property>
              <property name="message">Please connect to the Internet</property>
              <property name="button-text">Continue</property>
            </alert>
            <set on="success">
              <property name="save-locally">YES</property>
              <values>
                <property name="latlook">[session:emptyvalue]</property>
                <property name="lnglook">[session:emptyvalue]</property>
              </values>
            </set>
            <load_datasource on="success">
              <property name="datasource-id" if="'[data:directory('//current_observation/station_id')]'!=''">getmetar</property>
            </load_datasource>
            <modify on="success">
              <property name="widget-id">code</property>
              <values>
                <property name="text">[session:emptyvalue]</property>
              </values>
            </modify>
            <alert on="success">
              <property name="enabled" if="'[data:directory('//current_observation/station_id')]'!=''">NO</property>
              <property name="title">No entries found</property>
              <property name="message">Please try being more specific. Also, use ICAO instead of IATA codes.</property>
              <property name="button-text">Continue</property>
            </alert>
          </actions>
        </RFXMLDataProvider>
